<Window x:Class="PasswordManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        xmlns:views="clr-namespace:PasswordManager.Views"
        xmlns:viewmodels="clr-namespace:PasswordManager.BusinessLogic.ViewModels.Main;assembly=PasswordManager.BusinessLogic"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Window.Resources>
        <DataTemplate x:Name="startView" DataType="{x:Type viewmodels:StartViewModel}">
            <views:StartView/>
        </DataTemplate>
        <DataTemplate x:Name="accountsView" DataType="{x:Type viewmodels:AccountsViewModel}">
            <views:AccountsView/>
        </DataTemplate>
        <DataTemplate x:Name="addView" DataType="{x:Type viewmodels:AddViewModel}">
            <views:AddView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!--Menu-->
        <Border Background="WhiteSmoke" BorderBrush="Gainsboro" BorderThickness="1" Grid.Column="0" Grid.RowSpan="2">
            <StackPanel>
                <Border Background="LightGray" BorderBrush="Gray" BorderThickness="1">
                    <Button FontSize="25" Click="Button_Click" >Start</Button>
                </Border>
                <Border Background="LightGray" BorderBrush="Gray" BorderThickness="1">
                    <Button FontSize="25" Click="Button_Click_1">Accounts</Button>
                </Border>
            </StackPanel>
        </Border>

        <ContentControl Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Content="{Binding}"/>

    </Grid>
</Window>